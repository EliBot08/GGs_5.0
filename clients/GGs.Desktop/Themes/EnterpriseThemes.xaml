<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================= -->
    <!-- ENTERPRISE DARK THEME - MIDNIGHT BLUE    -->
    <!-- ========================================= -->
    <ResourceDictionary x:Key="MidnightTheme">
        <!-- Core Background Colors -->
        <Color x:Key="ThemeBackgroundPrimaryColor">#FF0A0E27</Color>
        <Color x:Key="ThemeBackgroundSecondaryColor">#FF141B3D</Color>
        <Color x:Key="ThemeBackgroundTertiaryColor">#FF1C2647</Color>
        <Color x:Key="ThemeBackgroundQuaternaryColor">#FF253154</Color>
        <Color x:Key="ThemeSurfaceColor">#FF141B3D</Color>
        <Color x:Key="ThemeSurfaceHoverColor">#FF1C2647</Color>
        <Color x:Key="ThemeSurfaceActiveColor">#FF253154</Color>

        <!-- Text Colors -->
        <Color x:Key="ThemeTextPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeTextSecondaryColor">#FFB8C5E0</Color>
        <Color x:Key="ThemeTextTertiaryColor">#FF8A9AB8</Color>
        <Color x:Key="ThemeTextDisabledColor">#FF4A5B7F</Color>
        <Color x:Key="ThemeTextHintColor">#FF6B7B9A</Color>

        <!-- Accent Colors - Cyan/Blue -->
        <Color x:Key="ThemeAccentPrimaryColor">#FF00E5FF</Color>
        <Color x:Key="ThemeAccentSecondaryColor">#FF00B8D4</Color>
        <Color x:Key="ThemeAccentTertiaryColor">#FF0091EA</Color>
        <Color x:Key="ThemeAccentQuaternaryColor">#FF0064B7</Color>
        <Color x:Key="ThemeAccentGlowColor">#8800E5FF</Color>

        <!-- Status Colors -->
        <Color x:Key="ThemeSuccessColor">#FF00E676</Color>
        <Color x:Key="ThemeWarningColor">#FFFFAB00</Color>
        <Color x:Key="ThemeErrorColor">#FFFF1744</Color>
        <Color x:Key="ThemeInfoColor">#FF00B0FF</Color>

        <!-- Border Colors -->
        <Color x:Key="ThemeBorderColor">#FF2D3A5C</Color>
        <Color x:Key="ThemeBorderHoverColor">#FF3D4A6C</Color>
        <Color x:Key="ThemeBorderActiveColor">#FF00E5FF</Color>
        <Color x:Key="ThemeBorderFocusColor">#FF00E5FF</Color>

        <!-- Glass and Overlay Colors -->
        <Color x:Key="ThemeGlassOverlayColor">#33FFFFFF</Color>
        <Color x:Key="ThemeModalOverlayColor">#CC0A0E27</Color>
        <Color x:Key="ThemeShadowColor">#AA000000</Color>

        <!-- Convert to Brushes -->
        <SolidColorBrush x:Key="ThemeBackgroundPrimary" Color="{StaticResource ThemeBackgroundPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundSecondary" Color="{StaticResource ThemeBackgroundSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundTertiary" Color="{StaticResource ThemeBackgroundTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundQuaternary" Color="{StaticResource ThemeBackgroundQuaternaryColor}"/>
        <SolidColorBrush x:Key="ThemeSurface" Color="{StaticResource ThemeSurfaceColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceHover" Color="{StaticResource ThemeSurfaceHoverColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceActive" Color="{StaticResource ThemeSurfaceActiveColor}"/>

        <SolidColorBrush x:Key="ThemeTextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextDisabled" Color="{StaticResource ThemeTextDisabledColor}"/>
        <SolidColorBrush x:Key="ThemeTextHint" Color="{StaticResource ThemeTextHintColor}"/>

        <SolidColorBrush x:Key="ThemeAccentPrimary" Color="{StaticResource ThemeAccentPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentSecondary" Color="{StaticResource ThemeAccentSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentTertiary" Color="{StaticResource ThemeAccentTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentQuaternary" Color="{StaticResource ThemeAccentQuaternaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentGlow" Color="{StaticResource ThemeAccentGlowColor}"/>

        <SolidColorBrush x:Key="ThemeSuccess" Color="{StaticResource ThemeSuccessColor}"/>
        <SolidColorBrush x:Key="ThemeWarning" Color="{StaticResource ThemeWarningColor}"/>
        <SolidColorBrush x:Key="ThemeError" Color="{StaticResource ThemeErrorColor}"/>
        <SolidColorBrush x:Key="ThemeInfo" Color="{StaticResource ThemeInfoColor}"/>

        <SolidColorBrush x:Key="ThemeBorder" Color="{StaticResource ThemeBorderColor}"/>
        <SolidColorBrush x:Key="ThemeBorderHover" Color="{StaticResource ThemeBorderHoverColor}"/>
        <SolidColorBrush x:Key="ThemeBorderActive" Color="{StaticResource ThemeBorderActiveColor}"/>
        <SolidColorBrush x:Key="ThemeBorderFocus" Color="{StaticResource ThemeBorderFocusColor}"/>

        <SolidColorBrush x:Key="ThemeGlassOverlay" Color="{StaticResource ThemeGlassOverlayColor}"/>
        <SolidColorBrush x:Key="ThemeModalOverlay" Color="{StaticResource ThemeModalOverlayColor}"/>
        <SolidColorBrush x:Key="ThemeShadow" Color="{StaticResource ThemeShadowColor}"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="ThemeAccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource ThemeAccentPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeAccentSecondaryColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource ThemeAccentTertiaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ThemeBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource ThemeBackgroundPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeBackgroundSecondaryColor}" Offset="0.6"/>
            <GradientStop Color="{StaticResource ThemeBackgroundTertiaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="ThemeSpotlightGradient" GradientOrigin="0.5,0.3" RadiusX="0.8" RadiusY="0.8">
            <GradientStop Color="#1100E5FF" Offset="0"/>
            <GradientStop Color="#0500E5FF" Offset="0.5"/>
            <GradientStop Color="#00000000" Offset="1"/>
        </RadialGradientBrush>

        <!-- Glass Effect -->
        <LinearGradientBrush x:Key="ThemeGlassEffect" StartPoint="0,0" EndPoint="0,1" Opacity="0.08">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="Transparent" Offset="0.2"/>
            <GradientStop Color="Transparent" Offset="0.8"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </ResourceDictionary>

    <!-- ========================================= -->
    <!-- ENTERPRISE LIGHT THEME - CLEAN MODERN   -->
    <!-- ========================================= -->
    <ResourceDictionary x:Key="LightTheme">
        <!-- Core Background Colors -->
        <Color x:Key="ThemeBackgroundPrimaryColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeBackgroundSecondaryColor">#FFF7F9FC</Color>
        <Color x:Key="ThemeBackgroundTertiaryColor">#FFECF0F5</Color>
        <Color x:Key="ThemeBackgroundQuaternaryColor">#FFE1E8ED</Color>
        <Color x:Key="ThemeSurfaceColor">#FFFFFFFF</Color>
        <Color x:Key="ThemeSurfaceHoverColor">#FFF7F9FC</Color>
        <Color x:Key="ThemeSurfaceActiveColor">#FFECF0F5</Color>

        <!-- Text Colors -->
        <Color x:Key="ThemeTextPrimaryColor">#FF1A202C</Color>
        <Color x:Key="ThemeTextSecondaryColor">#FF4A5568</Color>
        <Color x:Key="ThemeTextTertiaryColor">#FF718096</Color>
        <Color x:Key="ThemeTextDisabledColor">#FFA0AEC0</Color>
        <Color x:Key="ThemeTextHintColor">#FF718096</Color>

        <!-- Accent Colors - Professional Blue -->
        <Color x:Key="ThemeAccentPrimaryColor">#FF2563EB</Color>
        <Color x:Key="ThemeAccentSecondaryColor">#FF1D4ED8</Color>
        <Color x:Key="ThemeAccentTertiaryColor">#FF1E40AF</Color>
        <Color x:Key="ThemeAccentQuaternaryColor">#FF1E3A8A</Color>
        <Color x:Key="ThemeAccentGlowColor">#442563EB</Color>

        <!-- Status Colors -->
        <Color x:Key="ThemeSuccessColor">#FF10B981</Color>
        <Color x:Key="ThemeWarningColor">#FFF59E0B</Color>
        <Color x:Key="ThemeErrorColor">#FFEF4444</Color>
        <Color x:Key="ThemeInfoColor">#FF3B82F6</Color>

        <!-- Border Colors -->
        <Color x:Key="ThemeBorderColor">#FFD1D5DB</Color>
        <Color x:Key="ThemeBorderHoverColor">#FF9CA3AF</Color>
        <Color x:Key="ThemeBorderActiveColor">#FF2563EB</Color>
        <Color x:Key="ThemeBorderFocusColor">#FF2563EB</Color>

        <!-- Glass and Overlay Colors -->
        <Color x:Key="ThemeGlassOverlayColor">#11000000</Color>
        <Color x:Key="ThemeModalOverlayColor">#AAFFFFFF</Color>
        <Color x:Key="ThemeShadowColor">#44000000</Color>

        <!-- Convert to Brushes -->
        <SolidColorBrush x:Key="ThemeBackgroundPrimary" Color="{StaticResource ThemeBackgroundPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundSecondary" Color="{StaticResource ThemeBackgroundSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundTertiary" Color="{StaticResource ThemeBackgroundTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeBackgroundQuaternary" Color="{StaticResource ThemeBackgroundQuaternaryColor}"/>
        <SolidColorBrush x:Key="ThemeSurface" Color="{StaticResource ThemeSurfaceColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceHover" Color="{StaticResource ThemeSurfaceHoverColor}"/>
        <SolidColorBrush x:Key="ThemeSurfaceActive" Color="{StaticResource ThemeSurfaceActiveColor}"/>

        <SolidColorBrush x:Key="ThemeTextPrimary" Color="{StaticResource ThemeTextPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextSecondary" Color="{StaticResource ThemeTextSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextTertiary" Color="{StaticResource ThemeTextTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeTextDisabled" Color="{StaticResource ThemeTextDisabledColor}"/>
        <SolidColorBrush x:Key="ThemeTextHint" Color="{StaticResource ThemeTextHintColor}"/>

        <SolidColorBrush x:Key="ThemeAccentPrimary" Color="{StaticResource ThemeAccentPrimaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentSecondary" Color="{StaticResource ThemeAccentSecondaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentTertiary" Color="{StaticResource ThemeAccentTertiaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentQuaternary" Color="{StaticResource ThemeAccentQuaternaryColor}"/>
        <SolidColorBrush x:Key="ThemeAccentGlow" Color="{StaticResource ThemeAccentGlowColor}"/>

        <SolidColorBrush x:Key="ThemeSuccess" Color="{StaticResource ThemeSuccessColor}"/>
        <SolidColorBrush x:Key="ThemeWarning" Color="{StaticResource ThemeWarningColor}"/>
        <SolidColorBrush x:Key="ThemeError" Color="{StaticResource ThemeErrorColor}"/>
        <SolidColorBrush x:Key="ThemeInfo" Color="{StaticResource ThemeInfoColor}"/>

        <SolidColorBrush x:Key="ThemeBorder" Color="{StaticResource ThemeBorderColor}"/>
        <SolidColorBrush x:Key="ThemeBorderHover" Color="{StaticResource ThemeBorderHoverColor}"/>
        <SolidColorBrush x:Key="ThemeBorderActive" Color="{StaticResource ThemeBorderActiveColor}"/>
        <SolidColorBrush x:Key="ThemeBorderFocus" Color="{StaticResource ThemeBorderFocusColor}"/>

        <SolidColorBrush x:Key="ThemeGlassOverlay" Color="{StaticResource ThemeGlassOverlayColor}"/>
        <SolidColorBrush x:Key="ThemeModalOverlay" Color="{StaticResource ThemeModalOverlayColor}"/>
        <SolidColorBrush x:Key="ThemeShadow" Color="{StaticResource ThemeShadowColor}"/>

        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="ThemeAccentGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource ThemeAccentPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeAccentSecondaryColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource ThemeAccentTertiaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ThemeBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="{StaticResource ThemeBackgroundPrimaryColor}" Offset="0"/>
            <GradientStop Color="{StaticResource ThemeBackgroundSecondaryColor}" Offset="1"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="ThemeSpotlightGradient" GradientOrigin="0.5,0.3" RadiusX="0.8" RadiusY="0.8">
            <GradientStop Color="#082563EB" Offset="0"/>
            <GradientStop Color="#032563EB" Offset="0.5"/>
            <GradientStop Color="#00000000" Offset="1"/>
        </RadialGradientBrush>

        <!-- Glass Effect -->
        <LinearGradientBrush x:Key="ThemeGlassEffect" StartPoint="0,0" EndPoint="0,1" Opacity="0.05">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Transparent" Offset="0.2"/>
            <GradientStop Color="Transparent" Offset="0.8"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
    </ResourceDictionary>

    <!-- ========================================= -->
    <!-- ANIMATIONS - Smooth Micro-Interactions  -->
    <!-- ========================================= -->

    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                        From="0" To="1" Duration="0:0:0.35">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide Up Animation -->
    <Storyboard x:Key="SlideUp">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                        From="30" To="0" Duration="0:0:0.45">
            <DoubleAnimation.EasingFunction>
                <ExponentialEase EasingMode="EaseOut" Exponent="4"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                        From="0" To="1" Duration="0:0:0.35"/>
    </Storyboard>

    <!-- Scale In Animation -->
    <Storyboard x:Key="ScaleIn">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                        From="0.9" To="1.0" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                        From="0.9" To="1.0" Duration="0:0:0.4">
            <DoubleAnimation.EasingFunction>
                <BackEase EasingMode="EaseOut" Amplitude="0.4"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                        From="0" To="1" Duration="0:0:0.3"/>
    </Storyboard>

    <!-- Slide Fro Left -->
    <Storyboard x:Key="SlideFromLeft">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                        From="-60" To="0" Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <ExponentialEase EasingMode="EaseOut" Exponent="4"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                        From="0" To="1" Duration="0:0:0.4"/>
    </Storyboard>

    <!-- Pulse Animation -->
    <Storyboard x:Key="Pulse" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                        From="1.0" To="0.6" Duration="0:0:1.5">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Glow Animation -->
    <Storyboard x:Key="Glow" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" 
                        From="8" To="20" Duration="0:0:2">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>
