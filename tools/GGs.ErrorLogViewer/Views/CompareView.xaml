<UserControl x:Class="GGs.ErrorLogViewer.Views.CompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Compare Log Sessions" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Compare two log sessions side by side to identify differences and patterns" 
                       FontSize="14" 
                       Opacity="0.7"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Session -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Session A" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <Button Content="Load Session..." 
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12"/>
                    <TextBlock Text="No session loaded" 
                               Opacity="0.6"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="4" 
                          HorizontalAlignment="Center"
                          Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                          Margin="8,0"/>

            <!-- Right Session -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Session B" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    <Button Content="Load Session..." 
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12"/>
                    <TextBlock Text="No session loaded" 
                               Opacity="0.6"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
